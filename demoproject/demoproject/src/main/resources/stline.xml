<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   <bean autowire="byName" class="application.Straightline" id="Straightline">
   </bean>
    <bean  class = "application.Straightline" id = "pointA">
      <property name = "x" value = "2"></property>
       <property name = "y" value = "1"></property>
   </bean>
    <bean class = "application.Straightline" id = "pointB" >
      <property name = "x" value = "1"></property>
       <property name = "y" value = "2"></property>
   </bean>
   </beans>